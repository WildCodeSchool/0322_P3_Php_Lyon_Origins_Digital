<div id="nav-group-mb" class="rounded-top-5 d-flex justify-content-around overflow-hidden align-items-center">

	{% for navItem in navItems %}
		{% if navItem['name'] == 'show' or navItem['name'] == 'search' %}
			<div class="h-100">
			{% else %}
				<a class="h-100" href="{{ path(navItem['link']) }}">
				{% endif %}

				<div class="nav-item text-dark text-center d-flex justify-content-center align-items-center" aria-selected="false" id="nav-btn-{{ navItem['name'] }}-mb" aria-controls="{{ navItem['name'] }}">

					<i class="bi bi-{{ navItem['iconClass'] }}" id="{{ navItem['iconClass'] }}"></i>

				</div>
				{% if navItem['name'] == 'show' or navItem['name'] == 'search' %}
				</div>
		{% else %}
			</a>
		{% endif %}

	{% endfor %}
	<div class="nav-item-link-inactive">

		<div type="button" class="nav-item text-dark text-center d-flex justify-content-center align-items-center" data-bs-toggle="modal" data-bs-target="#videoSearchModal">

			<i class="bi bi-search"></i>

		</div>
	</div>

</div>
